[user]
	name = James Wright
	email = jamesw@gmail.com
[core]
	excludesfile = ~/.gitignore
	editor = /usr/local/bin/vim
    trustctime = false
[color]
	ui = true
[alias]
	alias = config --get-regexp ^alias\\.
	s = status -sb
	co = checkout
	ci = commit
	history = log --oneline --color --graph --decorate
	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
	# `git di $number` shows the diff between the state `$number` revisions ago and the current state
	di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
	staged = diff --staged
	find-deleted-file = rev-list -n 1 HEAD -- *
	nevermind = !git reset --hard HEAD && git clean -d -f
	unstage = reset -q HEAD --
	discard = checkout --
	resetmains = !git fetch origin master:master -f
	details = show --stat
	lastsha = !git rev-parse HEAD | pbcopy
    rootdir = !git rev-parse --show-toplevel
    # THIS COMMAND WILL FUCK UP YOUR DAY IF YOU HAVE ANY CURRENT CHANGES
    split = !git reset HEAD~ | git rebase -i 
    breakout = !"d() { git reset $1~; }; d"
	rmbranches = "!f() { git branch | grep $1 | xargs git branch -D; }; f"
    prune = !"b() { git branch --merged master | grep -v \"\\* master\" | xargs -n 1 git branch -d; }; b"
[diff]
    tool = vimdiff
[difftool]
	prompt = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
    ff = no
[mergetool]
	prompt = false
[push]
	default = simple
[include]
	path = .local.gitconfig
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pager]
	branch = false
	alias = false
